
{
    "entities": {
        "User": {
            "title": "User",
            "description": "A user of the application",
            "type": "object",
            "properties": {
                "uid": {
                    "type": "string",
                    "description": "The user's unique ID"
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's email address"
                },
                "displayName": {
                    "type": "string",
                    "description": "The user's display name"
                },
                "photoURL": {
                    "type": "string",
                    "format": "uri",
                    "description": "The URL of the user's profile picture"
                }
            },
            "required": ["uid", "email"]
        },
        "Prompt": {
            "title": "Prompt",
            "description": "An AI prompt created by a user.",
            "type": "object",
            "properties": {
                "userId": {
                    "type": "string",
                    "description": "The ID of the user who created the prompt."
                },
                "title": {
                    "type": "string",
                    "description": "The title of the prompt.",
                    "maxLength": 100
                },
                "content": {
                    "type": "string",
                    "description": "The content of the prompt.",
                    "maxLength": 10000
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string",
                        "maxLength": 30
                    },
                    "description": "A list of tags for the prompt.",
                    "maxItems": 10
                },
                "createdAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "The timestamp when the prompt was created."
                }
            },
            "required": ["userId", "title", "content", "createdAt"]
        }
    },
    "auth": {
        "providers": ["google.com", "password"]
    },
    "firestore": {
        "/users/{userId}": {
            "schema": {
                "$ref": "#/entities/User"
            },
            "description": "Stores user profile information."
        },
        "/prompts/{promptId}": {
            "schema": {
                "$ref": "#/entities/Prompt"
            },
            "description": "Stores AI prompts created by users."
        }
    }
}
    
